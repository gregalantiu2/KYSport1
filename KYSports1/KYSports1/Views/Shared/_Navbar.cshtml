
@{
    ViewBag.Title = "_Navbar";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/NewArticle.css")
    @Styles.Render("~/Content/AdminList.css")
    <link href="https://fonts.googleapis.com/css?family=Anton|Cuprum|Yanone+Kaffeesatz" rel="stylesheet">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" id="navbar">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="menuitem">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="menuitem">@Html.ActionLink("Articles", "Articles", "Home")</li>
                    <li class="menuitem">@Html.ActionLink("Recruiting", "Recruiting", "Home")</li>
                    <li class="menuitem">@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

