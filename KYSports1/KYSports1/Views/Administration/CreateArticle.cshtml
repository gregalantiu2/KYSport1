@model KYSports1.Models.ViewModels.CreateArticle
@{
    ViewBag.Title = "CreateArticle";
    Layout = "~/Views/Shared/_Navbar.cshtml";
    Styles.Render("~/Content/NewArticle.css");
    <script src='https://cloud.tinymce.com/stable/tinymce.min.js'></script>
}

<h2>Create Article</h2>

@using (Html.BeginForm("CreateArticle", "Administration", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
<table id="formtable">
    <tr>
        <th>Title:</th>
        <td>@Html.TextBox("ArticleTitle")</td>
    </tr>
    <tr>
        <th>Author:</th>
        <td>@Html.TextBox("Author")</td>
    </tr>
    <tr>
        <th>Select a Category</th>
        <td>@Html.DropDownList("categories")</td>
    </tr>
    <tr>
        <th>Include in Carousel?</th>
        <td>@Html.CheckBox("CarFlg")</td>
    </tr>
    <tr>
        <th>Body:</th>
        <td>@Html.TextArea("ArticleBody", new { @class = "form-control", @id = "mce" })</td>
    </tr>
    <tr>
    <td><button type="submit" class="btn btn-primary" id="SubmitName" onclick="SuccessMessage()">Submit</button></td>
    </tr>
</table>
    

}

<script>
    tinymce.init({
        selector: '#mce',
        forced_root_block: "",
        encoding: 'xml', 
        height: 500,
        menubar: false,
        plugins: [
            'advlist autolink lists link image charmap print preview anchor',
            'searchreplace visualblocks code fullscreen',
            'insertdatetime media table contextmenu paste code'
        ],
        toolbar: 'undo redo | insert | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image | media',
        media_live_embeds: true,
        content_css: [
            '//fonts.googleapis.com/css?family=Lato:300,300i,400,400i',
            '//www.tinymce.com/css/codepen.min.css'],
        extended_valid_elements: "+iframe[src|width|height|name|align|class]"


    });
</script>