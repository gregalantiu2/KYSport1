@model KYSports1.Models.ViewModels.ArticlePage
<head>
    @Styles.Render("~/Content/NewArticle.css")
</head>
<div class="navbar navbar-inverse navbar-fixed-top" id="navbar">
    <div class="container">
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="menuitem">@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="menuitem">
                    <div class="dropdown">
                        <button class="dropbtn">Articles</button>
                        <div class="dropdown-content">
                            <p id="pick">Pick A Category</p>
                            @foreach (var m in Model.list)
                            {
                                <a href="~/Home/ArticlesByCategory/@m.CategoryID">@m.Category</a>
                            }
                        </div>
                    </div>
                </li>
                <li class="menuitem">@Html.ActionLink("Recruiting", "Recruiting", "Home")</li>
                <li class="menuitem">@Html.ActionLink("About", "About", "Home")</li>
                 @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                    {
                        <li id="adminoptions" >@Html.ActionLink("AriclesList", "ListOfArticlesAdmin", "Administration")</li>
                        <li>@Html.ActionLink("CreateArticle", "CreateArticle", "Administration")</li>
                        <li>@Html.ActionLink("AddPlayer", "PlayerAdd", "Administration")</li>
                     }  
            </ul>
        </div>
    </div>
</div>
