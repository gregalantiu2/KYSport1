@model KYSports1.Models.ViewModels.Homepage

@{
    ViewBag.Title = "Home Page";
}
<body>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox" style=" max-width:100%; max-height: 500px !important;">
            @foreach (var m in Model.articles)
            {
                <div class="item active">
                    <a href="~/Administration/GetArticleById/@m.ArticleID">
                    <img src="~/Images/@m.ImageURL" alt="Big Blue Madness">
                    </a>
                </div>
            }
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="row" id="panels">
        <a href="~/MiniGames/UKBingo">
            <div class="col-md-3 bo" id="UKBingo">
                <h2>UK Bingo</h2>
                <p>
                    Customized UK themed bingo sheets that you and your friends
                    can fill in. Turn it into a drinking game or just play for fun!
                </p>
            </div>
        </a>
        <a href="~/Home/NBA">
            <div class="col-md-3" id="NBACats">
                <h2>NBA CATS</h2>
                <p>Keep up with former Cats that are tearing up the NBA. Stats and schedules for Notable Alum.</p>
            </div>
        </a>
        <div class="col-md-5" id="submit">
            <h2>Submit Content</h2>
            <p id="submittext">
                Ever wanted to write your own analysis or opinion piece? Now is your chance!
                KYSports1 is all about amateur content and wants to hear from you. Here you can also
                submit suggestions to existing content like UK Bingo, Site Design, or content you would like to see.
            </p>
        </div>
    </div>
</body>