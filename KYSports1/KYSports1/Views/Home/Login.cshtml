@model KYSports1.Models.ViewModels.ArticlePage
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Navbar.cshtml";
}

<div class="col-xs-6">
    <h2>Login</h2>
    @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <label>User Name</label>
            @Html.TextBoxFor(m => m.login.UserName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Password</label>
            @Html.PasswordFor(m => m.login.Password, new { @class = "form-control" })
        </div>
        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(m => m.login.RememberMe) Remember me?
            </label>
        </div>
        <button class="btn btn-primary">Log In</button>
    }
</div>



